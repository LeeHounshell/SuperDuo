<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:toolbarStyle">@style/toolbar_style</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/sharebar_dark</item>
    </style>

    <style name="toolbar_style" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="popupTheme">@style/Theme.AppCompat</item>
        <item name="android:elevation">@dimen/appbar_elevation</item>
    </style>

    <style name="detail_style" parent="card_layout_style">
        <item name="android:elevation">4dp</item>
        <item name="android:background">@color/sharebar_dark</item>
    </style>

</resources>
