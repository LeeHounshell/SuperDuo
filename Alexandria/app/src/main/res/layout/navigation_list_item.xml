<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="?android:attr/listPreferredItemHeight"
    style="@style/navigation_list_layout_style"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/navigation_list_icon_style"
        android:contentDescription="@string/navigation_icon" />

    <TextView
        android:id="@+id/list_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/navigation_list_item_style"
        android:contentDescription="@string/navigation_item" />

</LinearLayout>
